{
  "name": "harrys-firebolt",
  "version": "1.0.0",
  "description": "Prompt validation and enhancement middleware for AI code generators",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm run lint && npm run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rlin25/HarrysFirebolt.git"
  },
  "keywords": [
    "ai",
    "prompt",
    "validation",
    "middleware",
    "code-generation"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rlin25/HarrysFirebolt/issues"
  },
  "homepage": "https://github.com/rlin25/HarrysFirebolt#readme",
  "dependencies": {
    "ajv": "^8.17.1",
    "express": "^5.1.0",
    "natural": "^8.0.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/natural": "^5.1.5",
    "@types/node": "^20.17.46",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
